{
  "manifest_version": 2,

  "name": "FLEX",
  "version": "0.0.1",
  "description": "Flexible Theming Assistant",
  "author": "mkremer",

  "icons": {
      "128": "./src/img/icon_white_128.png"
  },

  "browser_action": {},

  "permissions": ["activeTab", "storage"],

  "options_ui": {
    "page": "./src/options/options.html",
    "open_in_tab": false
  },

  "background": {
    "scripts": ["./src/background/store.js", "./src/background/background.js"],
    "persistent": false
  }
}
